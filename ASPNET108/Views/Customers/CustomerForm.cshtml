@model  Vidly.ViewModels.CustomerFormViewModel

@{
    ViewBag.Title = "title";
}

<h2>請輸入顧客資料</h2>

@using (Html.BeginForm("Save", "Customers"))
{

    @Html.ValidationSummary(false, "請修正下列錯誤:")

    <div class="form-group">

        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", placeholder = "請輸入姓名" })

        @Html.ValidationMessageFor(m => m.Customer.Name)
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Customer.BirthDate)

        @Html.TextBoxFor(m => m.Customer.BirthDate,
            "{0: dd MMM yyyy}",
            new {@class = "form-control",
                placeholder = "格式範例: 4 Mar 2000 或是 2000-3-4"})

        @Html.ValidationMessageFor(m => m.Customer.BirthDate)
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Customer.MembershipType.Name)

        @Html.DropDownListFor(
            m=>m.Customer.MembershipTypeId,
            new SelectList(
                Model.MembershipTypes,
                "Id",
                "Name"
                ),
            "選擇會員等級",
            new {@class="form-control"})

        @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId)
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m =>
                m.Customer.IsSubscribedToNewsLetter) 打勾訂閱電子報
        </label>
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Customer.Credit)

        @Html.TextBoxFor(m => m.Customer.Credit,
            new {@class = "form-control",
                placeholder = "會員初始點數"})

        @Html.ValidationMessageFor(m => m.Customer.Credit)

    </div>

    @Html.HiddenFor(m => m.Customer.Id)

    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">送出</button>

}


