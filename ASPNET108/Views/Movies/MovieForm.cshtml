@model ASPNET108.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "title";
}

<h2>請輸入電影資料</h2>

@using (Html.BeginForm("Save", "Movies"))
{

    @Html.ValidationSummary(false, "請修正下列錯誤:")

    <div class="form-group">

        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control", placeholder = "請輸入片名" })

        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Movie.ReleasedDate)

        @Html.TextBoxFor(m => m.Movie.ReleasedDate,
            "{0: dd MMM yyyy}",
            new {@class = "form-control",
                placeholder = "格式範例: 4 Mar 2000 或是 2000-3-4"})

        @Html.ValidationMessageFor(m => m.Movie.ReleasedDate)
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Movie.Genre.Name)

        @Html.DropDownListFor(
            m=>m.Movie.GenreId,
            new SelectList(
                Model.Genres,
                "Id",
                "Name"
                ),
            "選擇影片類型",
            new {@class="form-control"})

        @Html.ValidationMessageFor(m => m.Movie.GenreId)
    </div>



    <div class="form-group">

        @Html.LabelFor(m => m.Movie.NumberInStocks)

        @Html.TextBoxFor(m => m.Movie.NumberInStocks,
            new {@class = "form-control",
                placeholder = "影片庫存量"})

        @Html.ValidationMessageFor(m => m.Movie.NumberInStocks)

    </div>

    @Html.HiddenFor(m => m.Movie.Id)

    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">送出</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
