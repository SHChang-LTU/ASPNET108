@model System.Collections.Generic.List<ASPNET108.Models.Movie>

@{
    ViewBag.Title = "title";
}


<div>
    <h1>電影列表</h1>

    <table id="movies" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>片名</th>
                <th>類型</th>
                <th>庫存量</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(
                            movie.Name,
                            "Details",
                            "Movies",
                            new {id = movie.Id},
                            null)
                    </td>
                    <td>
                        @movie.Genre.Name
                    </td>
                    <td>
                        @movie.NumberInStocks
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


